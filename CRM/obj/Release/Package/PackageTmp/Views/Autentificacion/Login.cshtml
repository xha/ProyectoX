 @using CRM.Models
@model User
@{ 
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/fontawesome-free/css/all.min.css") ">
 <style>    

     .checkbox input[type=checkbox]:checked + .checkbox-material .check {
    background: #3F51B5 !important;
}

 </style>
<div class="wrapper wrapper-full-page">
    <div class="full-page login-page" filter-color="black" data-image="@Url.Content("~/Content/dist/img/fondo.jpg")">
        <div class="content" style="padding-top: 5vh;">
            <div class="container">
                <div class="row">
                    <div class="col-xs-9 col-md-4 col-sm-6 col-xs-offset-2 col-md-offset-4 col-sm-offset-3 ">
                        @using (Html.BeginForm("Login", "Autentificacion", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                       { 
                            <div class="card card-login card-hidden" style="margin-bottom: 4px;">
                                <div class="card-header text-center" data-background-color="blue" style="background: linear-gradient(0deg, rgb(18, 87, 142), rgb(14, 20, 60));">
                                    <h4 class="card-title">Portal CRM </h4>
                                </div>
                                <p class="category text-center">
                                 Construyendo el Futuro
                                </p>
                                <div style="padding: 10px;padding-bottom: 0px;">
                                    <div class="card-content" style="border-radius: 4px 4px 4px 4px;    border: thin solid #dedcdc; padding: 0px 10px 10px 30px;">
                                        <h5 class="text-center" style="color:#000; font-weight: 700;">
                                            Iniciar Sesion
                                          
                                            @Html.ValidationSummary(true)
                                        </h5>
                                        <div class="text-danger text-center" id="error">
                                            @ViewBag.error
                                        </div>

                                        <div class="input-group">
                                            <div class="form-group label-floating it">
                                                @Html.Label( "Rif",new { @class = "control-label " })
                                                @Html.TextBoxFor(model => model.RUC, new { @class = "form-control imput", @id = "RUC" })
                                                @Html.ValidationMessageFor(model => model.RUC)
                                            </div>
                                            <span class="input-group-addon ">
                                                <i class="fas fa-building" style="color: #f9fafb;border: thin solid #b9b7b7;border: thin solid #b9b7b7;border-radius: 50%;    background: linear-gradient(0deg, rgb(22, 23, 23), rgb(71, 78, 109));padding: .5em;"></i>
                                            </span>
                                        </div>
                                        <div class="input-group">
                                            <div class="form-group label-floating it ">
                                                @Html.LabelFor(model => model.Usuario, new { @class = "control-label " })
                                                @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control imput", @id = "usuario" })
                                                @Html.ValidationMessageFor(model => model.Usuario)
                                            </div>
                                            <span class="input-group-addon" >
                                                <i class="fas fa-user-alt" style="color: #f9fafb;border: thin solid #b9b7b7;border: thin solid #b9b7b7;border-radius: 50%;    background: linear-gradient(0deg, rgb(22, 23, 23), rgb(71, 78, 109));padding: .5em;"></i>
                                            </span>
                                        </div>
                                        <div class="input-group">
                                            <div class="form-group label-floating " >
                                                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control imput", @type = "password", @id = "password" })
                                                @Html.ValidationMessageFor(model => model.Password)
                                            </div>
                                            <span class="input-group-addon">
                                                <i class="fas fa-address-book" style="color: #f9fafb;border: thin solid #b9b7b7;border: thin solid #b9b7b7;border-radius: 50%;    background: linear-gradient(0deg, rgb(22, 23, 23), rgb(71, 78, 109));padding: .5em;"></i>
                                            </span>
                                        </div>
                                        <div class="text-center checkbox">
                                            <label style="color: #000;     margin-left: 0px;">
                                                @Html.CheckBoxFor(m => m.RememberMe,new {@id= "remember" })
                                                <br>Recordar
                                            </label>
                                        </div>
                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" class="btn btn-success" onclick="iniciar_sesion()">Acceder</button>
                                    </div>
                                </div>
                               
                            </div>
                        }
                    </div>
                </div>
            </div>
            <footer class="footer" style="padding-top: 0px;padding-bottom: 2px;">
                <div class="container text-center">
                    <strong>
                        Tecnologia desarrollada para &nbsp;
                    </strong>
                      
     
            <strong><a class="text-danger" href="" target="_blank">Gestionar la calidad</a> </strong>
                </div>
            </footer>
     </div> 
       
    </div>
</div>
@section Scripts {

<script>
   
   



    function iniciar_sesion() {
        var ruc = $("#RUC").val();
        var usuario = $("#usuario").val();
        var password = $("#password").val();
        var remember = $("#remember")[0].checked;
        var arreglo = new Array();

        if (remember) {
            arreglo = [ruc, usuario,password];
            localStorage.setItem('arreglo', JSON.stringify(arreglo));
        } else {
            localStorage.clear();
        }
        document.forms[0].submit();
    }

 
</script>
}