    $("#tabla_datosMN").DataTable({
        destroy: true,
        bInfo: false,
        data: arr_listadoMN,
        order: [[ 0, "asc" ]],
        columns: [
            { data: "Id"},
            { data: "Descripcion" },
            { data: "Total" },
        ],
        footerCallback: function ( row, data, start, end, display ) {
            var api = this.api(), data;
            total = api
                .column( 2 )
                .data()
                .reduce( function (a, b) {
                    return parseFloat(a) + parseFloat(b);
                }, 0 );
 
            pageTotal = api
                .column( 2, { page: 'current'} )
                .data()
                .reduce( function (a, b) {
                    return parseFloat(a) + parseFloat(b);
                }, 0 );
 
